<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/division" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/por"
            app:layout_constraintStart_toEndOf="@+id/borrar" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.024"/>
    <Button
            android:text="Borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/borrar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tres" app:layout_constraintStart_toEndOf="@+id/resolver"
            android:layout_marginStart="4dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.025"/>
    <Button
            android:text="0"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:id="@+id/cero" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/uno" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" android:layout_marginBottom="280dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resolver" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dos" app:layout_constraintStart_toEndOf="@+id/cero"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/por" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/menos"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tres"
            app:layout_constraintTop_toBottomOf="@+id/seis" app:layout_constraintEnd_toStartOf="@+id/por"
            android:layout_marginEnd="12dp"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uno" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cuatro"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dos"
            app:layout_constraintTop_toBottomOf="@+id/cinco" app:layout_constraintStart_toEndOf="@+id/uno"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/tres"
            android:layout_marginEnd="12dp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menos" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/mas" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seis" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nueve" app:layout_constraintEnd_toStartOf="@+id/menos"
            android:layout_marginEnd="12dp"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cuatro" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/siete" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/cinco"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cinco" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ocho" app:layout_constraintEnd_toStartOf="@+id/seis"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/siete" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="224dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ocho" app:layout_constraintStart_toEndOf="@+id/siete"
            android:layout_marginStart="16dp" android:layout_marginTop="224dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nueve" app:layout_constraintStart_toEndOf="@+id/ocho"
            android:layout_marginTop="224dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="4dp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mas" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginTop="224dp" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/num1"
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="8dp"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/num2"
            android:layout_width="140dp"
            android:layout_height="18dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="8dp"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/num1" />

    <Button
            android:id="@+id/punto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cero" />

</android.support.constraint.ConstraintLayout>